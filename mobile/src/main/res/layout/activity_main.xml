<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/time_picker_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main"
        android:layout_marginTop = "55dp"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/playback_config_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/time_picker_fragment_container"
        android:layout_marginTop = "55dp"/>

    <Button
        android:id="@+id/btn_schedule_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_intent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop= "60dp"
        app:layout_constraintTop_toBottomOf="@+id/playback_config_fragment_container"/>

    <Button
        android:id="@+id/btn_cancel_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_intent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop= "60dp"
        app:layout_constraintTop_toBottomOf="@+id/playback_config_fragment_container"/>

</android.support.constraint.ConstraintLayout>